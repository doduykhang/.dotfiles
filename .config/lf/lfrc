set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

set hidden true
set ignorecase true
set icons true

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.rar) unrar x "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd bulk-rename ${{
        EDITOR=nvim vimv
}}

map au unarchive
map e $nvim "$f"

map gd cd ~/Downloads
map gm cd ~/Musics
map gp cd ~/project
map gc cd ~/.config
